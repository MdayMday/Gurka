#shuffling the deck
random.shuffle(deck)
#setting player hand
def dealHand():
    for x in range(6):
        x = 0
        for y in range(4):
            y + 1
            card = deck.pop(0)
            allPlay[y].hand.insert(0, card)
            allPlay[y].hand.sort()
            allPlay[y].display_hand()
def rotation_p():
    y = True
    t = False
    f = False
    over = 0
    up = 0

    dealHand()
    allAt = allPlay[:]

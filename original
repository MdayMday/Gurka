def menu():
    global allPlay 
    global numPlay
    numPlay = input("how many players are there?")
    if (numPlay == "1"):
        allPlay = [P1,Cpu1,Cpu2,Cpu3]
    if (numPlay == "2"):
        allPlay = [P1,P2,Cpu1,Cpu2]
    if (numPlay == "3"):
        allPlay = [P1,P2,P3,Cpu1]
    if (numPlay == "4"):
        allPlay = [P1,P2,P3,P4]
    for see in range(len(allPlay)):
        print(allPlay[see].name)
    rotation_p()
#rotation_p()
menu()
